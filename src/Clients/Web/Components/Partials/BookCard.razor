<div class="flex flex-col gap-2 w-[200px] group">
    <div class="w-full h-[300px] overflow-hidden">
        <img class="w-full h-full group-hover:scale-110 transition-all" src="@Book.CoverImage" alt="@Book.Title">
    </div>
    <div class="min-h-12">
        <a class="underline text-blue-500 hover:text-blue-600 transition-all" href="/books/@Book.Slug">@Book.Title</a>
    </div>
    <p>$ @Book.Price</p>
</div>

@code{
    [Parameter]
    public required BookDto Book { get; set; }
}

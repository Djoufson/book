<span class="tag-selector @Active flex">
    <a href="@Url" class="p-3 bg-white border-blue-500 border-solid border rounded-md hover:bg-slate-200 transition-all">
        @Tag.Tag
        <svg class="close-icon ml-1" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 32 32"><path fill="currentColor" d="M17.414 16L26 7.414L24.586 6L16 14.586L7.414 6L6 7.414L14.586 16L6 24.586L7.414 26L16 17.414L24.586 26L26 24.586z"/></svg>
    </a>
</span>

@code{
    [Parameter]
    public required TagDto Tag { get; set; }

    [Parameter]
    public bool Tagged { get; set; }

    [Parameter]
    public required string Url { get; set; }

    private string Active { get; set; } = string.Empty;

    protected override void OnInitialized()
    {
        Active = Tagged ? "active" : string.Empty;
    }
}
